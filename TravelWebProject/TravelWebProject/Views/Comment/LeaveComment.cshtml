

<div class="leave-comment-form mt-5" id="reply">
	<h4 class="side-title mb-2">Bir yorum yap...</h4>
	<p class="mb-4">
		* İşaretli alanları doldurunuz!
	</p>
	<form method="post" asp-action="LeaveComment" asp-controller="Comment">

		<div class="form-group">
			<textarea name="Content" class="form-control" placeholder="Yorum*" required=""
					  spellcheck="false"></textarea>
		</div>
		<div class="input-grids row">

			<div class="form-group col-lg-6">
				<input type="text" name="UserComment" class="form-control" placeholder="Adınız Soyadınız*"
					   required="">
			</div>

			<div class="form-group col-lg-6">
				<input type="text" name="DestinationID" class="form-control" placeholder="Destination*" required="">
			</div>
			@*<div class="form-group col-lg-6">
			<input type="email" name="Email" class="form-control" placeholder="Mail*" required="">
			</div>*@
		</div>

		<div class="submit text-right">
			<button class="btn btn-style btn-primary">Yorum yap </button>
		</div>
	</form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>