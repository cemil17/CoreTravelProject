@model List<Testimonial>

<section class="w3l-clients" id="clients">
	<div class="cusrtomer-layout py-5">
		<div class="container py-lg-4 py-md-3 pb-lg-0">
			<div class="heading text-center mx-auto">
				<h4 class="hny-title mb-md-5 mb-4">Misafirlerimiz Bizim İçin Ne Dediler?</h4>
				<h5 class="sub-title text-center">Düşünceleriniz Bizim İçin Önemli</h5>
			</div>
			<br />
			<div class="testimonial-width">
				<div id="owl-demo1" class="owl-two owl-carousel owl-theme">
					@if (Model.Count == 0)
					{
						<div class="item">
							<div class="testimonial-content">
								<div class="testimonial">
									<blockquote>
										<span class="fa fa-quote-left" aria-hidden="true"></span>
										@ViewBag.Message
									</blockquote>
								</div>
							</div>
						</div>
					}
					@foreach (var item in Model)
					{
						<div class="item">
							<div class="testimonial-content">
								<div class="testimonial">
									<blockquote>
										<span class="fa fa-quote-left" aria-hidden="true"></span>
										@item.Comment
									</blockquote>
									<div class="testi-des">
										<div class="test-img">
											<img src="@item.Image" class="img-fluid" alt="client-img">
										</div>
										<div class="peopl align-self">
											<h3>@item.Client</h3>
											<p class="indentity">Example City</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</section>
